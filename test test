    <script type="module">
        function searchWording() {
            const searchbox = QS('#searchbox'),
                txt = searchbox.dataset['txt'+(is_mobile_view() ? 'mobile' : '')];
            QS('input', searchbox).placeholder = txt;
            QS('.vapoteurheaderrecherche-search-icon span', searchbox).innerHTML = txt;
        }
        window.addEventListener('resize', e => {
            searchWording.sto && clearTimeout(searchWording.sto);
            searchWording.sto = setTimeout(searchWording, 100);
        });
        searchWording();
        window.addEventListener('DOMContentLoaded', function () {
            Algolia.init('guest_');
        });
    </script>

